@model Room
@{
    ViewData["Title"] = "Modifier une chambre";
}

<h2>Modifier la chambre @Model.Number</h2>
<hr />

<form asp-action="EditRoom" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Number" class="form-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Capacity" class="form-label"></label>
                <input asp-for="Capacity" class="form-control" type="number" min="1" max="10" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PricePerNight" class="form-label"></label>
                <input asp-for="PricePerNight" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="PricePerNight" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Chambre active</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Rooms" class="btn btn-secondary">Annuler</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




