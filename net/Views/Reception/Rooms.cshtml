@model List<Room>
@{
    ViewData["Title"] = "Gestion des Chambres";
}

<h2><i class="fas fa-bed me-2"></i>Gestion des Chambres</h2>
<hr />

<div class="mb-3">
    <a asp-action="CreateRoom" class="btn btn-primary btn-lg">
        <i class="fas fa-plus-circle me-2"></i>Ajouter une chambre
    </a>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Type</th>
                    <th>Capacité</th>
                    <th>Prix/nuit</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.Number</td>
                        <td>@room.Type</td>
                        <td>@room.Capacity</td>
                        <td>@room.PricePerNight.ToString("C")</td>
                        <td>
                            @if (room.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="EditRoom" asp-route-id="@room.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit me-1"></i>Modifier
                            </a>
                            <form asp-action="DeleteRoom" method="post" style="display: inline;">
                                <input type="hidden" name="id" value="@room.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette chambre ?');">
                                    <i class="fas fa-trash me-1"></i>Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Aucune chambre enregistrée.
    </div>
}



