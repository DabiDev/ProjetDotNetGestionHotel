@model DashboardViewModel
@{
    ViewData["Title"] = "Tableau de bord";
}

<h2><i class="fas fa-tachometer-alt me-2"></i>Tableau de bord - Réception</h2>
<hr />

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="dashboard-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="card-title"><i class="fas fa-bed me-2"></i>Chambres totales</div>
                    <h2>@Model.TotalRooms</h2>
                </div>
                <i class="fas fa-bed fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="dashboard-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="card-title"><i class="fas fa-key me-2"></i>Chambres occupées</div>
                    <h2>@Model.OccupiedRooms</h2>
                </div>
                <i class="fas fa-key fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="dashboard-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="card-title"><i class="fas fa-chart-line me-2"></i>Taux d'occupation</div>
                    <h2>@Model.OccupationRate.ToString("F1")%</h2>
                </div>
                <i class="fas fa-chart-line fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="dashboard-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="card-title"><i class="fas fa-calendar-check me-2"></i>Arrivées aujourd'hui</div>
                    <h2>@Model.ArrivalsToday.Count</h2>
                </div>
                <i class="fas fa-calendar-check fa-3x opacity-50"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-arrow-circle-down me-2"></i>Arrivées aujourd'hui (@DateTime.Today.ToString("dd/MM/yyyy"))</h5>
            </div>
            <div class="card-body">
                @if (Model.ArrivalsToday.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Chambre</th>
                                    <th>Client</th>
                                    <th>Heure</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reservation in Model.ArrivalsToday)
                                {
                                    var statusClass = reservation.Status == ReservationStatus.Confirmee ? "success" : "warning";
                                    var statusText = reservation.Status == ReservationStatus.Confirmee ? "Confirmée" : "En attente";
                                    <tr>
                                        <td>@reservation.Room.Number</td>
                                        <td>@reservation.User.Name</td>
                                        <td>14:00</td>
                                        <td><span class="badge bg-@statusClass">@statusText</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Aucune arrivée prévue aujourd'hui.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-arrow-circle-up me-2"></i>Départs aujourd'hui (@DateTime.Today.ToString("dd/MM/yyyy"))</h5>
            </div>
            <div class="card-body">
                @if (Model.DeparturesToday.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Chambre</th>
                                    <th>Client</th>
                                    <th>Heure</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reservation in Model.DeparturesToday)
                                {
                                    var statusClass = reservation.Status == ReservationStatus.Confirmee ? "success" : "warning";
                                    var statusText = reservation.Status == ReservationStatus.Confirmee ? "Confirmée" : "En attente";
                                    <tr>
                                        <td>@reservation.Room.Number</td>
                                        <td>@reservation.User.Name</td>
                                        <td>11:00</td>
                                        <td><span class="badge bg-@statusClass">@statusText</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Aucun départ prévu aujourd'hui.</p>
                }
            </div>
        </div>
    </div>
</div>



